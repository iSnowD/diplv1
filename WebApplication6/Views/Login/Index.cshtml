@model WebApplication6.Models.LoginView
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
      
        <legend>Вход</legend>
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label" for="Email">
                    Email
                </label>
                <div class="controls">
                    @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                    @Html.ValidationMessage("Email")
                </div>

            </div>
            <div class="form-group">
                <label class="control-label" for="Password">
                    Пароль
                </label>
                <div class="controls">
                    @Html.Password("Password", Model.Password, new { @class = "form-control" })
                    @Html.ValidationMessage("Password")
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Войти
                </button>
            </div>
        </div>
    </fieldset>
}