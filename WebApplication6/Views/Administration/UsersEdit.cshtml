@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IList<WebApplication6.Model.User>


<div class="col-md-2  col-md-pull-2">
    <div class="list-group">
        <a href="#" class="list-group-item active">
            Меню
        </a>
        <div class="list-group-item">
            @Html.ActionLink("Пользоватеи", "UsersEdit", "Administration")
        </div>
        <div class="list-group-item">
            @Html.ActionLink("Новости", "NewsEdit", "Administration")
        </div>
        <a href="#" class="list-group-item">Porta ac consectetur ac</a>
        <a href="#" class="list-group-item">Vestibulum at eros</a>
    </div>
</div>

<div class="col-md-10 col-md-pull-1">




    <table class="table table-hover table-bordered">
        <caption> <b>Пользователи </b></caption>
        <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Фамилия </th>
                <th>Дата последнего посещения</th>
                <th>Дата  Регистрации</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
            {


                <tr>
                    <td>  @user.ID           </td>
                    <td > @user.Name         </td>
                    <td>  @user.LastName     </td>
                    <td>  @user.LastVisitDate</td>
                    <td>  @user.AddedDate    </td>
                    <td align="center" border-right="0">
                        <input type="button" class="btn btn-default btn-xs" value="редактировать" onclick="location.href='@Url.Action("EditUser", "Administration",new { id = user.ID })'" />

                        @using (Html.BeginForm("Deleteuser", "Administration", new { id = user.ID }))
                        {

                            <button class="btn btn-danger btn-xs" type="submit" style="width:100px;">удалить</button>
                        }
                          </td>

                </tr>
            }

        </tbody>
    </table>






</div>
