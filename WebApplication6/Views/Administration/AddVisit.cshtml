        <hr />
        <h4> Добавить запись  </h4>
        <div class="col-md-5">
            <fieldset>

                <label class="control-label">
                    Пользователь
                </label>

                @Html.DropDownList("UserID", new SelectList(ViewBag.datalist, "ID", "Name"), new { @class = "form-control" })  
                <label class="control-label">
                   Тип услуги
                </label>
                @Html.DropDownList("ServiceID", new SelectList(ViewBag.servicelist, "ID", "Type"), new { @class = "form-control" })  
