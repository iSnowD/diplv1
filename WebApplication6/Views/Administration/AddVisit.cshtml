                    Дата
                </label>
                @Html.TextBox("Date", "", new { @class = "form-control" })
                <label class="control-label">
                    Время
                </label>
                @Html.DropDownList("TimeID", new SelectList(ViewBag.timeslist, "ID", "Time"), new { @class = "form-control" })
                <label class="control-label">
                    Примечание
                </label>
                @Html.TextArea("Note", "", new { @class = "form-control" })
  
                <br />
