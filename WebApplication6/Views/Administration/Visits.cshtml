@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IList<WebApplication6.Model.Visits>


<div class="col-md-2  col-md-pull-2">
    <div class="list-group">
        <a href="#" class="list-group-item active">
            Меню
        </a>
        <div class="list-group-item">
            @Html.ActionLink("Пользоватеи", "UsersEdit", "Administration")
        </div>
        <div class="list-group-item">
            @Html.ActionLink("Новости", "NewsEdit", "Administration")
        </div>
        <div class="list-group-item">
            @Html.ActionLink("Посещения", "Visits", "Administration")
        </div>
        <a href="#" class="list-group-item">Vestibulum at eros</a>
    </div>
</div>

<div class="col-md-10 col-md-pull-1">




    <table class="table table-hover table-bordered">




        <caption> <b>Посещения </b></caption>
        <thead class="thead-inverse">
            <tr>
                <th>Тип услуги</th>
                <th>Имя</th>
                <th>Фамилия </th>
                <th>Дата посещения</th>
                <th>Время </th>
                <th> Посещено? </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var visit in Model)
            {


                <tr>
                    <td>  @visit.ServiceType.Type   </td>
                    <td>  @visit.User.Name       </td>
                    <td>  @visit.User.LastName  </td>
                    <td>  @visit.Date           </td>
                    <td>  @visit.Times.Time      </td>                   
                    <td align="center">    
                   @using (Html.BeginForm("Visitscheck", "Administration", new { id = visit.ID }))
                {
                       @Html.CheckBox("IsVisited", visit.IsVisited, new { onclick = "this.form.submit();" })
                }   </td>
                </tr>
            }

        </tbody>
    </table>






</div>
