 
@model IList<WebApplication6.Model.News>

@{
  
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

    
        <div class="row">
            <div class="col-md-12">
                
                @if (Model.Count == 0)
                {

                    <center>   <h1> <br /><br /> Список новостей пуст</h1> </center>

                }

                @foreach (var news in Model)
                { 
                   <div class="post">
                 

                    <h1>   @news.Header </h1>

                    <p>
                         @Html.Raw(@news.Content)
                    </p>
                    
                          <div class="date">
                              @news.AddedDate
                          </div>
                   </div>
                <hr>
                    <br />
                }


            </div>
        </div>
 
 